<Application x:Class="IceCreamCalculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IceCreamCalculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="Header" Color="#444444"/>
        <SolidColorBrush x:Key="Item" Color="DimGray"/>
        <Style TargetType="RadioButton" x:Key="choices">
            <Setter Property="Foreground" Value="{StaticResource Item}"/>
            <Setter Property="FontSize" Value="10"/>
            
        </Style>
        <Style TargetType="CheckBox" x:Key="chbxChoicxes" >
            <Setter Property="Foreground" Value="{StaticResource Item}"/>
            <Setter Property="FontSize" Value="10"/>

        </Style>
        <Style TargetType="GroupBox" x:Key="myHeaders" >
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Application.Resources>
</Application>
